<h1>Add your own recipes</h1>
<form method="post" action="/user/add_recipes">
  <div>
    <label>Name:</label>
    <input type="text" name="recipe_name">
  </div>
  <div>
    <label>Url:</label>
    <input type="text" name="url">
  </div>
  <% @ingredients.each do |ingredient| %>
    <span>
      <div>
        <input type="checkbox" name="ingredient[]" value="<%= ingredient.id %>" id="<%= ingredient.id %>"><label for="<%= ingredient.id %>"><%= ingredient.ingredient_name %></label><br>
      </div>
    </span>
  <% end %>
  <input type="submit" value="Add"><br>
</form>